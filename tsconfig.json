{
  "compilerOptions": {
      "lib": ["es5", "es6", "dom"],
      "target": "es6",
      "module": "commonjs",
      "outDir": "./build",
      "strict":true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "sourceMap": true
  },
  "include": ["src/**/*.ts"]
  
}